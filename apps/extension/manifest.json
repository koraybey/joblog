{
  "name": "Joblog",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Log the jobs for future analysis using the Joblog app.",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}